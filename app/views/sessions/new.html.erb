<title>Sign In</title>
<h1>Sign In</h1>

<div class="row">
    <div class="span6 offset3">
        <%= form_for(:session, url: sessions_path) do |f| %>
          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <p><%= f.submit "Sign In", class: "btn btn-large btn-primary" %></p>
      <% end %>

      <p>If you don't have an account, <%= link_to "sign up for one!", signup_path %></p>
  </div>
</div>
